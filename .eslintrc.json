{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "jest": true
  },
  "rules": {
    "comma-dangle": [
      2, "always-multiline"
    ],
    "indent": [
      2, 2
    ],
    "linebreak-style": [
      2, "unix"
    ],
    "max-len": [
      2, 79, 2
    ],
    "react/prop-types": 0,
    "quotes": [
      2, "single"
    ],
    "semi": [
      2, "never"
    ]
  }
}
